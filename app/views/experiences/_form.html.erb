<%= simple_form_for @experience do |f| %>
	<%= f.input :name %>
	<%= f.input :continent, collection: ['Asia', 'Europe', 'North America', 'South America', 'Oceania', 'Africa', 'Antarctica'], prompt: "Select"  %>
	<%= f.input :country %>
	<%= f.input :city %>
	<%= f.input :location %>
	<%= f.input :tag_list, label: 'Keywords' %>
	<%= f.input :description, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} } %>
	<%= f.input :external_links %>
	<%= f.button :submit, class: "btn btn-primary" %>
<% end %>
