First name: <%= @profile.firstname %> <br>
Last name: <%= @profile.lastname %> <br>
Email: <%= current_user.email %> <br>
Travel Interests: <%= @profile.tag_list %> <br>
<%= link_to 'Edit', edit_profile_path(@profile) %>


<p>
  Followed by: <br>
  <ul>
  <% @profile.followers.each do |profile| %>
    <li><%= profile.firstname %></li>
  <% end %>
  </ul>
</p>


<p>
	<% if @profile.followers.include?(current_user.profile) %>
		<%= link_to 'Unfollow', unfollow_profile_path(@profile) %>
	<% else %>
		<%= link_to 'Follow', follow_profile_path(@profile) %>
	<% end %>
</p>

<hr>

<p>
  Following: <br>
  <ul>
  <% @profile.all_following.each do |profile| %>
    <li><%= profile.firstname %></li>
  <% end %>
  </ul>
</p>