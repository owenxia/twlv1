      <div class="row">
        <div class="col-md-8">       
          <h1>My Profile</h1>
        </div>
        <div class="col-md-4">
          <div class="btn-action-parent">
            <div class="btn-action-child">
              
              <% if @profile.user == current_user %>
                <%= link_to 'Edit Profile', edit_profile_path(@profile), class: "btn btn-warning" %>
              <% end %>
              <%= link_to 'View Wish List', wish_list_profile_path, class: "btn btn-primary" %>

              <% if @profile.followers.include?(current_user.profile) %>
                <%= link_to 'Unfollow', unfollow_profile_path(@profile), class: "btn btn-default" %>
              <% elsif current_user.profile!= @profile %>
                <%= link_to 'Follow', follow_profile_path(@profile), class: "btn btn-success" %>
              <% end %>

            </div>
          </div>
        </div>
      </div>

      <div class="row"> <!-- row -->

        <div class="col-md-8">
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">Basic Details</h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-2">

                  <div class="parent">
                    <div class="child">
                      <div>AVATAR</div>
                    </div>
                  </div>

                </div>

                <div class="col-md-10">
                  <p>Login email: <%= @profile.user.email %> 
                    <% if @profile.user == current_user %>
                      <%= link_to 'Edit Login', edit_user_registration_path, class: "btn btn-warning btn-xs" %>
                    <% end %>
                  <p>First name: <%= @profile.firstname %></p>
                  <p>Last name: <%= @profile.lastname %></p>
                  <p>Country: <%= @profile.country %></p>
                  <p>City: <%= @profile.city %></p>
                  <p>Gender: <%= @profile.gender %></p>
                  <p>Age: <%= @profile.age %></p>
                  <p>Travel Interests: <%= @profile.tag_list %></p>
                </div> <!-- /col-md-10 -->   

              </div> <!-- /row -->
            </div> <!-- /panel-body -->
          </div> <!-- /panel -->

          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">More About Me</h3>
            </div>

            <div class="panel-body">
              <%= @profile.about %>
            </div>
          </div>

          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">Where I've Been</h3>
            </div>

            <div class="panel-body">
              <% if @profile.user == current_user %>
                <%= link_to "Add Travel Record", new_profile_travel_record_path(@profile), class: "btn btn-success btn-xs" %>
                <br><br>
              <% end %>
              
              <ul>
                <% @profile.user.travel_records.each do |travel_record| %>
                  <li class="list-travel-record">
                    <%= travel_record.country %>
                    <% if @profile.user == current_user %>
                      <%= link_to 'Delete', profile_travel_record_path(@profile, travel_record), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
                    <% end %>
                  </li>
                <% end %>
              </ul>
      
            </div>
          </div>

        </div> <!-- /col-md-8 -->

        <div class="col-md-4">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title">Social Media Accounts</h3>
            </div>

            <div class="panel-body">
              !!!!!!!!!Placeholder for social media accounts!!!!!!!
            </div>
          </div>

          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title">Invite Friends</h3>
            </div>

            <div class="panel-body">
              !!!!!!!!!Placeholder for invite friends!!!!!!!
            </div>
          </div>

          <div class="panel panel-warning">
            <div class="panel-heading">
              <h3 class="panel-title">Followed By</h3>
            </div>

            <div class="panel-body">
              <ul>
              <% @profile.followers.each do |profile| %>
                <li>
                  <%= profile.firstname %>
                  <%= image_tag avatar_url(profile), class: "avatar-image" %>
                </li>

              <% end %>
              </ul>
            </div>
          </div>

          <div class="panel panel-warning">
            <div class="panel-heading">
              <h3 class="panel-title">Following</h3>
            </div>

            <div class="panel-body">
              !!!!!!!!!Placeholder for avatars!!!!!!!
              <ul>
              <% @profile.all_following.each do |profile| %>
                <li><%= profile.firstname %></li>
              <% end %>
              </ul>
            </div>
          </div>

        </div> <!-- /col-md-4 -->

      </div><!--  /row -->