<%= simple_form_for @profile do |f| %>
	<%= f.input :firstname, label: "First name" %>
	<%= f.input :lastname, label: "Last name" %>
	<%= f.input :country, prompt: "Select" %>
	<%= f.input :city %>
	<%= f.input :gender, collection: ['Male', 'Female'], prompt: "Select" %>
	<%= f.input :age %>
	<%= f.input :about %>
	<%= f.input :tag_list, label: 'Travel interests' %>
	<%= f.input :avatar_img, as: :file, label: "Avatar" %>
	<%= f.input :delete_avatar, as: :boolean, checked_value: true, unchecked_value: false, label: "Delete exisitng avatar?", input_html: { checked: false } %>	
	<%= f.input :avatar_url, label: 'Avatar URL' %>
	<%= f.button :submit, class: "btn btn-primary" %>
<% end %>



